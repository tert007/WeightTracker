<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:padding="16dp"

        android:id="@+id/settings_weight_unit_view"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="8dp"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Еденицы измерения"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/settings_weight_unit_spinner"

                android:entries="@array/weight_units"

                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </android.support.v7.widget.AppCompatSpinner>

        </LinearLayout>

        <TextView
            android:text="Выберите предпочтительные еденицы измерения"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
    </LinearLayout>
</LinearLayout>
