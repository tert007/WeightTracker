<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"

    android:paddingTop="4dp"
    android:paddingBottom="4dp"

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/statistics_list_view_item_colored_shape_image_view"
        android:layout_width="10dp"
        android:layout_height="match_parent" />

    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/statistics_list_view_item_weight_text_view"
        tools:text="60"
        android:textSize="20sp"
        android:textColor="@color/black"

        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"

        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/statistics_list_view_item_weight_unit_text_view"
        tools:text="kg"
        android:textSize="20sp"
        android:textColor="@color/black"

        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/view3" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/statistics_list_view_item_weight_difference_text_view"

            android:layout_gravity="center_horizontal"

            tools:text="+20"
            android:textSize="14sp"
            android:textColor="@color/black"

            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/statistics_list_view_item_date_text_view"
            tools:text="12 Jun 2015"
            android:textSize="14sp"
            android:textColor="@color/grey"

            android:layout_gravity="bottom|end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

</LinearLayout>

