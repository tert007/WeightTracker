<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"

    android:paddingTop="5dp"
    android:paddingBottom="5dp"

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/statistics_list_view_item_value_text_view"
        tools:text="60"
        android:textSize="24sp"
        android:textColor="@color/grey"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/statistics_list_view_item_date_text_view"
            tools:text="12 Jun 2015"
            android:textSize="20sp"
            android:textColor="@color/grey"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/statistics_list_view_item_weight_difference"

            android:layout_gravity="center_horizontal"

            tools:text="+20"
            android:textSize="16sp"
            android:textColor="@color/grey"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/statistics_list_view_item_edit_image_view"

        android:layout_gravity="center_vertical"

        android:padding="6dp"

        android:src="@drawable/edit_icon_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/statistics_list_view_item_remove_image_view"

        android:layout_gravity="center_vertical"

        android:padding="6dp"

        android:src="@drawable/remove_icon_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
